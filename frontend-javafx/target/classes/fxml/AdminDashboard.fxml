<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.myapp.ui.admin.AdminDashboardController">
   <top>
      <VBox>
         <children>
            <MenuBar>
               <menus>
                  <Menu text="مدیریت">
                     <items>
                        <MenuItem fx:id="usersMenuItem" onAction="#handleUsers" text="مدیریت کاربران" />
                        <MenuItem fx:id="restaurantsMenuItem" onAction="#handleRestaurants" text="مدیریت رستوران‌ها" />
                        <MenuItem fx:id="ordersMenuItem" onAction="#handleOrders" text="مدیریت سفارشات" />
                        <MenuItem fx:id="reportsMenuItem" onAction="#handleReports" text="گزارشات" />
                     </items>
                  </Menu>
                  <Menu text="حساب کاربری">
                     <items>
                        <MenuItem fx:id="profileMenuItem" onAction="#handleProfile" text="پروفایل" />
                        <MenuItem fx:id="logoutMenuItem" onAction="#handleLogout" text="خروج" />
                     </items>
                  </Menu>
               </menus>
            </MenuBar>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="پنل مدیریت سیستم">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">
         <tabs>
            <Tab text="داشبورد">
               <content>
                  <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
                     <content>
                        <VBox spacing="15.0">
                           <children>
                              <!-- Statistics Cards -->
                              <HBox spacing="15.0">
                                 <children>
                                    <VBox spacing="10.0" style="-fx-background-color: #e7f3ff; -fx-border-color: #b3d9ff; -fx-border-radius: 5; -fx-background-radius: 5;" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label text="کل کاربران">
                                             <font>
                                                <Font name="System Bold" size="14.0" />
                                             </font>
                                          </Label>
                                          <Label fx:id="totalUsersLabel" style="-fx-text-fill: #0056b3; -fx-font-size: 24; -fx-font-weight: bold;" text="0" />
                                       </children>
                                       <padding>
                                          <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                                       </padding>
                                    </VBox>
                                    <VBox spacing="10.0" style="-fx-background-color: #f0f8e7; -fx-border-color: #c3e6cb; -fx-border-radius: 5; -fx-background-radius: 5;" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label text="کل رستوران‌ها">
                                             <font>
                                                <Font name="System Bold" size="14.0" />
                                             </font>
                                          </Label>
                                          <Label fx:id="totalRestaurantsLabel" style="-fx-text-fill: #155724; -fx-font-size: 24; -fx-font-weight: bold;" text="0" />
                                       </children>
                                       <padding>
                                          <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                                       </padding>
                                    </VBox>
                                    <VBox spacing="10.0" style="-fx-background-color: #fff3cd; -fx-border-color: #ffeaa7; -fx-border-radius: 5; -fx-background-radius: 5;" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label text="سفارشات امروز">
                                             <font>
                                                <Font name="System Bold" size="14.0" />
                                             </font>
                                          </Label>
                                          <Label fx:id="todayOrdersLabel" style="-fx-text-fill: #856404; -fx-font-size: 24; -fx-font-weight: bold;" text="0" />
                                       </children>
                                       <padding>
                                          <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                                       </padding>
                                    </VBox>
                                 </children>
                              </HBox>
                              
                              <!-- Recent Activities -->
                              <VBox spacing="10.0" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 5; -fx-background-radius: 5;">
                                 <children>
                                    <Label text="فعالیت‌های اخیر">
                                       <font>
                                          <Font name="System Bold" size="16.0" />
                                       </font>
                                    </Label>
                                    <ListView fx:id="recentActivitiesListView" maxHeight="200.0" />
                                 </children>
                                 <padding>
                                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                                 </padding>
                              </VBox>
                           </children>
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                        </VBox>
                     </content>
                  </ScrollPane>
               </content>
            </Tab>
            <Tab text="مدیریت کاربران">
               <content>
                  <VBox fx:id="usersManagementPane" spacing="10.0">
                     <children>
                        <Label text="مدیریت کاربران" />
                        <TableView fx:id="usersTableView" VBox.vgrow="ALWAYS" />
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
            <Tab text="مدیریت رستوران‌ها">
               <content>
                  <VBox fx:id="restaurantsManagementPane" spacing="10.0">
                     <children>
                        <Label text="مدیریت رستوران‌ها" />
                        <TableView fx:id="restaurantsTableView" VBox.vgrow="ALWAYS" />
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
   <bottom>
      <VBox>
         <children>
            <Separator />
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label fx:id="statusLabel" text="آماده" />
                  <ProgressIndicator fx:id="loadingIndicator" maxHeight="20.0" maxWidth="20.0" visible="false" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>
