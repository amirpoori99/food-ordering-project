<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.myapp.ui.order.CartController">
   <top>
      <VBox>
         <children>
            <MenuBar>
               <menus>
                  <Menu text="ناوبری">
                     <items>
                        <MenuItem fx:id="backMenuItem" onAction="#handleBack" text="بازگشت به رستوران‌ها" />
                        <MenuItem fx:id="profileMenuItem" onAction="#handleProfile" text="پروفایل" />
                        <MenuItem fx:id="orderHistoryMenuItem" onAction="#handleOrderHistory" text="تاریخچه سفارشات" />
                        <MenuItem fx:id="logoutMenuItem" onAction="#handleLogout" text="خروج" />
                     </items>
                  </Menu>
                  <Menu text="عملیات">
                     <items>
                        <MenuItem fx:id="clearCartMenuItem" onAction="#handleClearCart" text="پاک کردن سبد" />
                        <MenuItem fx:id="refreshMenuItem" onAction="#handleRefresh" text="بروزرسانی" />
                     </items>
                  </Menu>
               </menus>
            </MenuBar>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="سبد خرید">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <Label fx:id="itemCountLabel" style="-fx-text-fill: #6c757d;" text="(0 آیتم)" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <SplitPane dividerPositions="0.7" orientation="HORIZONTAL">
         <items>
            <!-- Cart Items List -->
            <VBox spacing="10.0">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label text="آیتم‌های سبد خرید">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <Button fx:id="selectAllButton" onAction="#handleSelectAll" text="انتخاب همه" />
                        <Button fx:id="removeSelectedButton" onAction="#handleRemoveSelected" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="حذف انتخاب شده‌ها" />
                     </children>
                  </HBox>
                  <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
                     <content>
                        <VBox fx:id="cartItemsContainer" spacing="10.0">
                           <children>
                              <!-- Cart items will be populated dynamically -->
                              <Label fx:id="emptyCartLabel" style="-fx-text-fill: #6c757d; -fx-font-size: 14;" text="سبد خرید خالی است" visible="true" />
                           </children>
                        </VBox>
                     </content>
                  </ScrollPane>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            
            <!-- Order Summary and Checkout -->
            <VBox spacing="15.0" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-width: 1 0 0 1;">
               <children>
                  <Label text="خلاصه سفارش">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  
                  <!-- Order Details -->
                  <VBox spacing="10.0" style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-radius: 5; -fx-background-radius: 5;">
                     <children>
                        <GridPane hgap="10.0" vgap="8.0">
                           <columnConstraints>
                              <ColumnConstraints hgrow="NEVER" minWidth="80.0" />
                              <ColumnConstraints hgrow="ALWAYS" />
                           </columnConstraints>
                           <children>
                              <Label text="تعداد آیتم:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                              <Label fx:id="totalItemsLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                              
                              <Label text="جمع کل:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                              <Label fx:id="subtotalLabel" text="0 تومان" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              
                              <Label text="هزینه ارسال:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                              <Label fx:id="deliveryFeeLabel" text="رایگان" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                              
                              <Label text="تخفیف:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                              <Label fx:id="discountLabel" text="0 تومان" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                              
                              <Separator GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4" />
                              
                              <Label text="مجموع نهایی:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                              <Label fx:id="totalAmountLabel" style="-fx-font-weight: bold; -fx-text-fill: #28a745;" text="0 تومان" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                           </children>
                        </GridPane>
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </VBox>
                  
                  <!-- Coupon Section -->
                  <VBox spacing="10.0" style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-radius: 5; -fx-background-radius: 5;">
                     <children>
                        <Label text="کد تخفیف">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <HBox spacing="10.0">
                           <children>
                              <TextField fx:id="couponCodeField" promptText="کد تخفیف را وارد کنید" HBox.hgrow="ALWAYS" />
                              <Button fx:id="applyCouponButton" onAction="#handleApplyCoupon" text="اعمال" />
                           </children>
                        </HBox>
                        <Label fx:id="couponStatusLabel" style="-fx-text-fill: #6c757d;" text="" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </VBox>
                  
                  <!-- Delivery Information -->
                  <VBox spacing="10.0" style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-radius: 5; -fx-background-radius: 5;">
                     <children>
                        <Label text="اطلاعات ارسال">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <TextArea fx:id="deliveryAddressField" maxHeight="80.0" minHeight="80.0" promptText="آدرس تحویل را وارد کنید" />
                        <TextField fx:id="deliveryPhoneField" promptText="شماره تماس برای تحویل" />
                        <TextArea fx:id="orderNotesField" maxHeight="60.0" minHeight="60.0" promptText="توضیحات اضافی (اختیاری)" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </VBox>
                  
                  <!-- Checkout Buttons -->
                  <VBox spacing="10.0">
                     <children>
                        <Button fx:id="checkoutButton" onAction="#handleCheckout" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;" text="ادامه خرید و پرداخت" />
                        <Button fx:id="saveForLaterButton" onAction="#handleSaveForLater" style="-fx-background-color: #6c757d; -fx-text-fill: white;" text="ذخیره برای بعد" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </items>
      </SplitPane>
   </center>
   <bottom>
      <VBox>
         <children>
            <Separator />
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label fx:id="statusLabel" text="آماده" />
                  <ProgressIndicator fx:id="loadingIndicator" maxHeight="20.0" maxWidth="20.0" visible="false" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>
