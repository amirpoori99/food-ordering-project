<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.myapp.ui.auth.LoginController">
   <children>
      <Label text="ورود به سیستم" />
      <TextField fx:id="phoneField" promptText="شماره تلفن" />
      <PasswordField fx:id="passwordField" promptText="رمز عبور" />
      <CheckBox fx:id="rememberMeCheckbox" text="مرا به خاطر بسپار" />
      <Button fx:id="loginButton" onAction="#handleLogin" text="ورود" />
      <Hyperlink fx:id="registerLink" onAction="#handleRegisterLink" text="ثبت‌نام" />
      <Label fx:id="statusLabel" text="" />
      <ProgressIndicator fx:id="loadingIndicator" visible="false" />
   </children>
</VBox>
