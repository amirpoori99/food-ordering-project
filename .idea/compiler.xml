<!-- فایل تنظیمات کامپایلر پروژه سیستم سفارش غذا -->
<!-- این فایل شامل تنظیمات کامپایلر و پردازش annotation ها است -->
<!-- نویسنده: تیم توسعه -->
<!-- تاریخ آخرین ویرایش: تیر ۱۴۰۴ -->
<!-- نسخه: ۲.۰ - تنظیمات کامپایلر پیشرفته -->
<!-- ================================================================ -->

<project version="4">
  <!-- ================================================================ -->
  <!-- بخش تنظیمات کامپایلر -->
  <!-- ================================================================ -->
  <component name="CompilerConfiguration">
    <!-- ================================================================ -->
    <!-- تنظیمات پردازش annotation ها -->
    <!-- ================================================================ -->
    <annotationProcessing>
      <!-- ================================================================ -->
      <!-- پروفایل پیش‌فرض Maven برای پردازش annotation -->
      <!-- ================================================================ -->
      <profile name="Maven default annotation processors profile" enabled="true">
        <!-- ================================================================ -->
        <!-- مسیر خروجی فایل‌های تولید شده از annotation ها -->
        <!-- ================================================================ -->
        <sourceOutputDir name="target/generated-sources/annotations" />
        
        <!-- ================================================================ -->
        <!-- مسیر خروجی فایل‌های تولید شده از annotation های تست -->
        <!-- ================================================================ -->
        <sourceTestOutputDir name="target/generated-test-sources/test-annotations" />
        
        <!-- ================================================================ -->
        <!-- تنظیم مسیر خروجی نسبت به ریشه محتوا -->
        <!-- ================================================================ -->
        <outputRelativeToContentRoot value="true" />
        
        <!-- ================================================================ -->
        <!-- نام ماژول بک‌اند -->
        <!-- ================================================================ -->
        <module name="food-ordering-backend" />
      </profile>
    </annotationProcessing>
  </component>
</project>