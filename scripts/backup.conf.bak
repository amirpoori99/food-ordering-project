# ================================================================
# FOOD ORDERING SYSTEM - BACKUP CONFIGURATION
# ================================================================

# Database Configuration
DB_HOST="localhost"
DB_PORT="5432"
DB_NAME="food_ordering_prod"
DB_USER="food_ordering_backup"
DB_PASSWORD="backup_password_here"

# Backup Settings
BACKUP_BASE_DIR="/var/backups/food-ordering"
RETENTION_DAYS=30
COMPRESS_BACKUPS=true
VERIFY_BACKUPS=true

# Email Notifications
EMAIL_NOTIFICATIONS=false
EMAIL_TO="admin@yourdomain.com"

# Advanced Settings
PARALLEL_JOBS=2
MAX_BACKUP_SIZE_GB=10

# Application Directories to Backup
APP_DIRS=(
    "/opt/food-ordering"
    "/etc/food-ordering"
    "/var/log/food-ordering"
)

# Configuration Directories to Backup
CONFIG_DIRS=(
    "/etc/food-ordering"
    "/etc/systemd/system/food-ordering.service"
    "/etc/nginx/sites-available/food-ordering"
    "/etc/ssl/food-ordering"
)

# Exclude Patterns
EXCLUDE_PATTERNS=(
    "*.log"
    "*.tmp"
    "target/*"
    "node_modules/*"
    ".git/*"
) 